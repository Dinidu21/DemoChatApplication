<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dinidu.demochatapp.controller.ClientController"
            prefHeight="450.0" prefWidth="600.0" stylesheets="@styles.css">
    <top>
        <VBox spacing="5" styleClass="header">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <HBox alignment="CENTER" spacing="10">
                <Label text="Group Chat Client" styleClass="title-label"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="connectionStatus" text="Not Connected" styleClass="status-label"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Your Name:" styleClass="name-label"/>
                <TextField fx:id="usernameField" promptText="Enter your username" HBox.hgrow="ALWAYS"/>
                <Button fx:id="connectButton" text="Connect" onAction="#handleConnect" styleClass="connect-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" styleClass="chat-area"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" styleClass="input-area">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="messageField" promptText="Type your message here..." HBox.hgrow="ALWAYS"
                       styleClass="message-field" disable="true"/>
            <Button fx:id="sendButton" text="Send" onAction="#handleSendMessage" styleClass="send-button" disable="true"/>
            <Button fx:id="exitButton" text="Disconnect" onAction="#handleExit" styleClass="exit-button" disable="true"/>
        </HBox>
    </bottom>
</BorderPane>