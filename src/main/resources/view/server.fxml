<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dinidu.demochatapp.controller.ServerController"
            prefHeight="500.0" prefWidth="700.0" stylesheets="@styles.css">
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="header">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Group Chat Server" styleClass="title-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" text="Server starting..." styleClass="status-label"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.7" styleClass="split-pane">
            <VBox spacing="10" styleClass="chat-container">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Chat Messages" styleClass="section-label"/>
                <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" styleClass="chat-area"/>
            </VBox>

            <VBox spacing="10" styleClass="clients-container">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Connected Clients" styleClass="section-label"/>
                <ListView fx:id="clientListView" VBox.vgrow="ALWAYS" styleClass="client-list"/>
                <Label fx:id="clientCountLabel" text="Active clients: 0" styleClass="count-label"/>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" styleClass="input-area">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="messageField" promptText="Broadcast message to all clients..." HBox.hgrow="ALWAYS" styleClass="message-field"/>
            <Button fx:id="sendButton" text="Broadcast" onAction="#handleSendMessage" styleClass="send-button"/>
            <Button fx:id="stopServerButton" text="Stop Server" onAction="#handleStopServer" styleClass="exit-button"/>
        </HBox>
    </bottom>
</BorderPane>